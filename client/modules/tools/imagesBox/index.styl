images
  figure
    position relative
    overflow hidden
    width 240px
    height 175px
    cursor pointer

    span
      position absolute
      bottom 5px
      left 5px
      color white
      text-shadow 0px 0px 2px black

#modal
  text-align center

  .modal-dialog
    width auto
    height calc(100% - 60px)
    display inline-block
  
  .modal-content
    height 100%

  .modal-body
    position relative
    padding 0px
    height 100%
    
    img
      width auto
      height 100%
    
    .mdi
      position absolute
      font-size 20px
      text-shadow 0px 0px 4px white
      cursor pointer

    .mdi-close-circle-outline
      top 5px
      right 5px
    
    .mdi-chevron-left
      left 5px
      top 50%
      font-size 75px

    .mdi-chevron-right
      right 5px
      top 50%
      font-size 75px      